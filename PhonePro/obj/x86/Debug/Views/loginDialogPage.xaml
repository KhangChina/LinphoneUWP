<ContentDialog x:ConnectionId='1'
    x:Class="PhonePro.Views.loginDialogPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
   
    mc:Ignorable="d"
    Title="Login SipPhone"
    PrimaryButtonText="Login"
                                                         
    CloseButtonText="Exit"
    >
    <Grid x:ConnectionId='2' x:Name="ContentArea" Margin="{StaticResource MediumLeftRightMargin}">
        <Grid
            Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}">
            
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Width="Auto">
                <BitmapIcon x:ConnectionId='3' Name="SlicesIcon" UriSource="https://portal.htgsoft.com/media/khang-nguyen-xuan/HTG_Logo.png?_t=1655867586" Width="100px" ShowAsMonochrome="False"/>

                <TextBox x:ConnectionId='4' Header="Enter your domain SipServer:" PlaceholderText="192.168.100.251" Width="400px" x:Name="txtDomain"/>

                <TextBox x:ConnectionId='5' Header="Enter your name:" PlaceholderText="369" x:Name="txtUsername"/>
                <TextBlock Text="Enter your password: "/>
                <StackPanel Orientation="Horizontal" >


                    <PasswordBox x:ConnectionId='6'  Name="txtPassword" Width="250" Margin="0,0,8,0" PasswordRevealMode="Hidden" AutomationProperties.Name="Sample password box"/>

                    <CheckBox x:ConnectionId='7' Name="revealModeCheckBox" Content="Show password" IsChecked="False"                                                                            />

                </StackPanel>


            </StackPanel>

        </Grid>
    </Grid>
</ContentDialog>

